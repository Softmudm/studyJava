<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
		"http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<!-- 配置生成器 -->
<generatorConfiguration >

	<!--1.修改为自己的oracle连接jar包:绝对路径地址；-->
	<classPathEntry location="E:\maven-repository\com\oracle\database\jdbc\ojdbc6\11.2.0.4\ojdbc6-11.2.0.4.jar"/>

	<!-- 生成一组对象的环境(指定数据库，指定表...) -->
	<context id="context1">
		<commentGenerator  >
			<!--编码-->
			<property name="javaFileEncoding" value="UTF-8"/>
			<!--是否不生成注释-->
			<property name="suppressAllComments" value="true" />
			<!--是否不开启时间标志-->
			<property name="suppressDate" value="true"/>
		</commentGenerator>
		<!--2.选择数据库的driverClass与connectionURL-->
		<jdbcConnection driverClass="oracle.jdbc.driver.OracleDriver"
						connectionURL="jdbc:oracle:thin:@localhost:1521:orcl"
						userId="chanpin"
						password="123456" />

		<!--3.生成实体类 指定包名 以及生成的绝对地址 （可以自定义地址，但是路径不存在会自动创建 ） -->
		<javaModelGenerator targetPackage="com.sz.product.model" targetProject="E:\IDEA-code\mall\mall-product\src\main\java" >
			<property name="enableSubPackages" value="true"/> <!-- 如果true，MBG会根据catalog和schema来生成子包。如果false就会直接用targetPackage属性。默认为false -->
			<property name="trimStrings" value="true" /> <!-- 当数据库字段使用CHAR时，建议在<javaModelGenerator>中设 -->
		</javaModelGenerator>

		<!--4.生成Mapper映射文件地 址 -->
		<sqlMapGenerator targetPackage="com.sz.product.mapper"  targetProject="E:\IDEA-code\mall\mall-product\src\main\java" />

		<!--5.生成Mapper 接口文件 可以配置 type="XMLMAPPER"生成xml的dao实现 -->
		<javaClientGenerator targetPackage="com.sz.product.dao" targetProject="E:\IDEA-code\mall\mall-product\src\main\java" type="XMLMAPPER" />

		<!--6.配置哪些 表需要自动生成-->
		<table tableName="product" enableCountByExample="true" enableUpdateByExample="true" enableDeleteByExample="true"
			   enableSelectByExample="true"   selectByExampleQueryId="true" >
			<!-- 去除表名前缀 -->
			<!--<domainObjectRenamingRule searchString="^Exam" replaceString="" />-->
		</table>

	</context>
</generatorConfiguration>